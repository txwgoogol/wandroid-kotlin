    </fragment>

    <fragment
        android:id="@+id/navigation"
        android:name="io.github.txwgoogol.apps.wandroid.ui.main.navigation.NavigationFragment"
        tools:layout="@layout/navigation_fra">

    </fragment>

    <fragment
        android:id="@+id/profile"
        android:name="io.github.txwgoogol.apps.wandroid.ui.main.profile.ProfileFragment"
