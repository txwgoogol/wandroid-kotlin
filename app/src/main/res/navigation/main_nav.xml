    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="io.github.txwgoogol.apps.wandroid.ui.main.home.HomeFragment"
        tools:layout="@layout/home_fra">

    </fragment>

    <fragment
        android:id="@+id/system"
        android:name="io.github.txwgoogol.apps.wandroid.ui.main.system.SystemFragment"
        tools:layout="@layout/system_fra">

